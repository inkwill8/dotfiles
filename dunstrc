# Filtering rules
[ignore]
    # Ignore certain spammy notifications
    appname = "Spotify"
    summary = "*Advertisement*"
    skip_display = true

[shortcuts]
    # Keyboard shortcuts for notification control
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

